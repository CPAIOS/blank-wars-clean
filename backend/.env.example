# Environment Configuration
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://localhost:5432/blankwars
REDIS_URL=redis://localhost:6379

# JWT Secrets (REQUIRED - Must be at least 32 characters)
# Generate secure secrets with: openssl rand -base64 32
JWT_ACCESS_SECRET=REPLACE_WITH_SECURE_SECRET_MIN_32_CHARS
JWT_REFRESH_SECRET=REPLACE_WITH_SECURE_SECRET_MIN_32_CHARS

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# CSRF Protection Secret (REQUIRED)
# Generate with: openssl rand -base64 32
CSRF_SECRET=REPLACE_WITH_SECURE_SECRET_MIN_32_CHARS